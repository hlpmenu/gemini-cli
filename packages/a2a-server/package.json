{
  "name": "@hlmpn/gemini-cli-a2a-server",
  "version": "0.6.0-nightly",
  "private": true,
  "description": "Gemini CLI A2A Server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlpmenu/gemini-cli.git",
    "directory": "packages/a2a-server"
  },
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "bun dist/src/http/server.js",
    "build": "bun ../../scripts/build_all.ts --build-package && mv dist/index.js dist/server.js",
    "lint": "bunx --bun eslint . --ext .ts,.tsx",
    "format": "bunx --bun prettier --write .",
    "test": "bunx --bun vitest run",
    "test:ci": "bunx --bun vitest run --coverage",
    "typecheck": "bunx --bun tsc --noEmit"
  },
  "files": ["dist"],
  "dependencies": {
    "@a2a-js/sdk": "^0.3.2",
    "@google-cloud/storage": "^7.16.0",
    "@hlmpn/gemini-cli-core": "file:../core",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "tar": "^7.4.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/supertest": "^6.0.3",
    "@types/tar": "^6.1.13",
    "@vitest/coverage-istanbul": "^3.2.4",
    "dotenv": "^16.4.5",
    "supertest": "^7.1.4",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "bun": "^1.2.0",
    "node": ">=24.0.0"
  },
  "overrides": {
    "@google/gemini-cli-core": "file:../core"
  }
}
